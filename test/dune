(executable
 (name sleep)
 (modules sleep)
 (modes native)
 ; (enabled_if
 ;  (or
 ;   (= %{context_name} "solo5")
 ;   (= %{context_name} "default")))
 (link_flags
  :standard
  -linkall
  -cclib
  "-z unikraft-backend=qemu"
  -cclib
  "-z solo5-abi=hvt")
 (libraries mkernel)
 (foreign_stubs
  (language c)
  (names manifest.sleep)))

